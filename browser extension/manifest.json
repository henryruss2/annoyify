{
   "name": "annoyify",
   "version": "1.0 beta",
   "description": "makes every website SO annoying!",
   "icons": {
     "128": "bad-website.png",
     "128": "carrot-annoyed.png",
   },

   "background": {
     "persistent": true,
     "scripts": ["contentScript.js"]
   },
   "permissions": ["*://*/", "activeTab"],
   "browser_action": {
     "default_icon": "carrot-annoyed.png",
   }
   "content_scripts": [
  {
    "matches": ["*://*/*"],
    "run_at": "document_idle",
    "js": ["contentScript.js"]
  }
],
 }
